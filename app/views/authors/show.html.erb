<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @author.name %>
</p>

<p>
  <strong>City:</strong>
  <%= @author.city %>
</p>
<td><%= link_to 'Edit', edit_author_path(@author) %></td><br>
<td><%= link_to 'Destroy', @author, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
<%= link_to 'Back', authors_path %><br>
<%= link_to 'Watch all books' , author_books_path(@author) %>
<br>
<h2>Add a Book</h2>
<%= form_with model: [@author,@author.books.build] do |form|%>
  <p><%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p><%= form.label :language %>
    <%= form.text_field :language %>
  </p>
  <%= form.submit %>
<% end %>